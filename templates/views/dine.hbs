                    menuWrapper.innerHTML += `
                    <div class="${category} menu-restaurant menu-item">
                        <span class="clearfix">
                            <a class="menu-title" href="#" data-meal-img="${item.img}">${item.title}</a>
                            <span style="left: 166px; right: 44px;" class="menu-line"></span>
                            <span class="menu-price">${item.price}</span>
                        </span>
                        <button class="select-btn">Select</button>
                        <div class="quantity-selection">
                            <label for="quantity-${category}-${index}">Quantity:</label>
                            <input type="number" id="quantity-${category}-${index}" name="quantity-${category}-${index}" min="1" max="20" value="1">
                        </div>
                    </div>`;
                });
            });
        }

        const items = ['fv', 'shawarma', 'burger', 'fish', 'subn', 'subv', 'rnv', 'rv', 'snv', 'sv', 'fnv', 'cnv', 'cv', 'soupn', 'soupv', 'bir', 'tan', 'tik', 'rot', 'nig', 'vg', 'b'];

        items.forEach(id => {
            document.getElementById(id).onclick = () => {
                showItems(id);
                setSelected();
            };
        });

        let cart = [];

        function showItems(filterClass) {
            document.querySelectorAll('#menu-wrapper .menu-item').forEach(item => {
                item.style.display = item.classList.contains(filterClass) || filterClass === 'menu-restaurant' ? 'block' : 'none';
            });
        }

        function setSelected() {
            document.querySelectorAll('#menu-flters ul li a').forEach(button => {
                button.classList.remove('active');
            });
            const activeButton = document.querySelector('#menu-flters ul li a[data-filter=".' + getCurrentFilter() + '"]');
            if (activeButton) activeButton.classList.add('active');
        }

        function getCurrentFilter() {
            const activeElement = document.querySelector('#menu-flters ul li a.active');
            return activeElement ? activeElement.getAttribute('data-filter').substring(1) : '';
        }

        document.addEventListener('click', function (e) {
            if (e.target.classList.contains('select-btn')) {
                const itemElement = e.target.parentElement;
                const item = {
                    title: itemElement.querySelector('.menu-title').textContent,
                    price: itemElement.querySelector('.menu-price').textContent,
                    img: itemElement.querySelector('a').getAttribute('data-meal-img')
                };
                const quantity = parseInt(itemElement.querySelector('input[type="number"]').value, 10);
                updateCart(item, quantity);
            } else if (e.target.classList.contains('delete-btn')) {
                cart.splice(e.target.getAttribute('data-index'), 1);
                renderCart();
            }
        });

        function updateCart(item, quantity) {
            if (quantity <= 0) {
                alert("Quantity must be at least 1");
                return;
            }

            const existingItem = cart.find(cartItem => cartItem.title === item.title);
            if (existingItem) {
                existingItem.quantity += quantity;
            } else {
                cart.push({ ...item, quantity });
            }
            renderCart();
        }

        function calculateTotalPrice() {
            return cart.reduce((total, cartItem) => {
                const price = parseFloat(cartItem.price.replace('/-', '').trim());
                return total + (price * cartItem.quantity);
            }, 0);
        }

        function updateTotalPrice() {
            const totalPrice = calculateTotalPrice().toFixed(2);
            document.getElementById('total-price').innerHTML = `Total Price: ${totalPrice}/-`;
        }

        function renderCart() {
            const cartItems = document.getElementById('cart-items');
