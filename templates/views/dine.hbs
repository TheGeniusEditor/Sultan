                        <span class="cart-price">${cartItem.price}</span>
                        <span class="cart-quantity">Quantity: ${cartItem.quantity}</span>
                        <button class="delete-btn" data-index="${index}">Delete</button>
                        <span class="cart-total-price">${totalPrice}/-</span>
                    </span>
                </div>
                `;
            }).join('');
            updateTotalPrice();
        }

document.getElementById('checkout-btn').onclick = async function (event) {
        event.preventDefault();

        if (cart.length === 0) return alert('Your cart is empty!');

        const customerName = document.getElementById('customer-name').value.trim();
        const tableNumber = document.getElementById('table-number').value.trim();
        const orderType = document.getElementById('orderType').value;
        const paymentType = document.getElementById('paymentType').value; // Get the payment type value

        if (!customerName || !tableNumber) {
            alert('Please enter your name and table number.');
            return;
        }

        const totalPrice = calculateTotalPrice().toFixed(2);

        const cartData = {
            customerName,
            tableNumber,
            orderType,
            paymentType, // Include paymentType in the cartData object
            cartItems: cart,
            totalPrice
        };

        try {
            const response = await fetch('/checkout', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(cartData)
            });

            if (response.ok) {
                const result = await response.text();
                alert(result);
            } else {
                alert('Error: Could not complete the order. Please try again.');
            }
        } catch (error) {
            alert('Error: Could not complete the order. Please try again.');
        }
    };


        if (typeof renderMenuItems === 'function') {
            renderMenuItems();
        }

        showItems('fv');
    </script>
